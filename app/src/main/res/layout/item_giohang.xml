<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView

                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung Galaaxy S20 FR 256GB"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txt_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.490.000 đ"
                android:textStyle="bold"
                android:textColor="#E80D0D" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số sản phẩm còn lại là:" />

                <TextView
                    android:id="@+id/txt_soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ccc"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/img_giam"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_2" />

                <TextView
                    android:id="@+id/txt_soluong2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp" />

                <ImageButton
                    android:id="@+id/img_tang"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_1"

                    />

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="30dp"
            android:layout_height="25dp"
          android:background="@drawable/cancel"
            />
    </LinearLayout>

</LinearLayout>