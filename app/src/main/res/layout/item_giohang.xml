<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/item_phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung Galaaxy S20 FR 256GB"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.490.000 đ"
                android:textColor="#E80D0D"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số sản phẩm còn lại là:" />

                <TextView
                    android:id="@+id/txt_soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#ccc"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_giam"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_2" />

                <TextView
                    android:id="@+id/txt_soluong2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/img_tang"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_1" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/xoasp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>