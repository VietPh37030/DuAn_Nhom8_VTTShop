<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Thêm Hãng Sản Phẩm"
            android:textColor="#F30A0A"
            android:textSize="25sp"
            android:textStyle="bold" />



        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/ed_maDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ID danh mục"
            android:inputType="none"
           android:textAlignment="center"
            android:background="@drawable/editbootom"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="URL ảnh sản phẩm"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_URL_SanPham"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập URL của sản phẩm"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tên Hãng"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_TenHang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập Tên "
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="23sp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddhang"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:background="#9AD2FC"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="#F95B5B"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>