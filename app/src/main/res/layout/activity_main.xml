<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEEDD9"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/menu_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8DF6AB"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/logo"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp"></ImageView>

        <TextView
            android:id="@+id/menu_btnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="VTT STORE"
            android:textColor="#6A16F3"
            android:textSize="26sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/storke"
        android:theme="@style/SearchViewTheme"
        app:iconifiedByDefault="false"
        app:queryHint="Tìm kiếm sản phẩm" />

    <TextView
        android:id="@+id/danhMucSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:text="Danh Mục Sản Phẩm"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/GridMenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/danhMucSP"
        android:layout_margin="10dp"
        android:background="@drawable/storke"
        android:columnCount="4"
        android:padding="20dp"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/nav_DThoai"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="#81ecec"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textColor="#6A4B70" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nav_Pkien"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginLeft="120dp"
            android:background="#81ecec"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productType"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phukien" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phụ Kiện"
                    android:textColor="#6A4B70" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/GridMenu1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:translationZ="10dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/menu_nav"
            android:background="#fff"
            app:menu="@menu/bottom_nav"
            app:itemTextColor="@color/color_item_bottom_nav"
            app:itemIconTint="@color/color_item_bottom_nav"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>