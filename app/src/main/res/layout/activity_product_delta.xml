<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDelta">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4CAF50"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:menu="@menu/sub_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/phone_phong" />

            <!--    // close bao1-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <TextView
                android:id="@+id/txtnamedeita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lenovo ideapad3"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtgiadeita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12.490.000 đ"
                android:textColor="#E31818"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5px"
                android:text="Thông tin sản phẩm:"
                android:textColor="#03A9F4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="245dp"
            android:layout_gravity="center"
            android:background="@drawable/solid"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtmota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="30dp"
                android:text="iPhone 13 mini: 128GB | 256GB | 512GB. Màu sắc: Hồng, Đen, Trắng, Xanh, Đỏ (Đối với bản 512GB chỉ áp dụng màu Đen).
iPhone 13: 128GB | 256GB | 512GB. Màu sắc: Hồng, Đen, Trắng"
                android:textColor="#000" />

        </LinearLayout>
    </LinearLayout>
    <!--    //layout bao-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnthemvaogio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/editbootom2"
            android:text="Thêm giỏ hàng"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnmuangay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/editbootom"
            android:text="Mua ngay"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>