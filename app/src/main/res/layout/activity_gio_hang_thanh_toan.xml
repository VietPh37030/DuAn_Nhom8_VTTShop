<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.GioHangThanhToanActi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbardoitt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#4CAF50"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/sub_menu" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lstthanhtoagio"
                android:layout_width="match_parent"
                android:layout_height="354dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/solid"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/txtnguoinhangh"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/solid"
            />
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtSdtgh"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="5sp"
            android:layout_gravity="center"
            android:background="@drawable/solid"
            />
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"

            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtDiaChigh"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:padding="5sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:background="@drawable/solid"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ccc"
        android:gravity="bottom"
        android:orientation="horizontal"

        android:padding="10dp">

        <LinearLayout
            android:layout_width="247dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="@drawable/grey_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="Tổng tiền:"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTongtiengh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="10.000.000"
                android:textColor="#EA0000"
                android:textSize="18dp"
                android:textStyle="bold" />



        </LinearLayout>

        <Button
            android:id="@+id/btnthanhtoangh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/editbootom"
            android:text="Thanh Toán"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>