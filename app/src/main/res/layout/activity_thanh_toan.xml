<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activities.ThanhToanActi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbardoitt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/sub_menu" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgttsp"
            android:layout_width="194dp"
            android:layout_height="208dp"
            android:src="@drawable/item_phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttttensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Te san pham"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txttgia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="10.000.000"
                    android:textColor="#FF1414"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Số Lượng :" />

                <TextView
                    android:id="@+id/txtttsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Số Lượng :"
            android:textColor="#000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_giamnav"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/img_2" />

            <TextView
                android:id="@+id/txt_navsoluong"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:text="1" />

            <ImageButton
                android:id="@+id/img_tangnav"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/img_1" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/solid"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/txtnguoinhan"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/solid"
            />
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtSdt"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="5sp"
            android:layout_gravity="center"
            android:background="@drawable/solid"
            />
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ Người Nhận:"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"

            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtDiaChi"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint=""
            android:textStyle="bold"
            android:padding="5sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:background="@drawable/solid"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:background="@color/black"
        android:orientation="horizontal"

        android:padding="10dp">

        <LinearLayout
            android:layout_width="247dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="@drawable/grey_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tổng tiền:"
                android:textColor="#000"
                android:padding="3dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="10.000.000"
                android:textColor="#EA0000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="VND"
                android:textColor="#FF0000"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
        <Button
            android:id="@+id/btnthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/editbootom"
            android:text="Thanh Toán"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>