<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_phone_ls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView

                android:id="@+id/txt_phone_ls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung Galaaxy S20 FR 256GB"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txt_soluong_ls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="1 sản phẩm"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành Tiền:" />

                <TextView
                    android:id="@+id/txt_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.490.000 đ"
                    android:textStyle="bold"
                    android:textColor="#E80D0D" />
            </LinearLayout>
            <Button
                android:id="@+id/btnmualai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua lại"
                android:layout_marginTop="40dp"
                android:layout_gravity="end"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>