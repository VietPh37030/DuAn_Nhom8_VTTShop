<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChiTietHoaDonAdmin">

    <!-- Đặt ảnh placeholder nếu không có URL -->/>

    <ImageView
        android:id="@+id/imgHoaDon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/item_phone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgHoaDon"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMaHoaDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã Hóa Đơn: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTenSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm: "
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Thêm các TextView khác tương ứng -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
